@using Microsoft.AspNetCore.Mvc.Localization
@using LiberacionProductoWeb.Models.LayoutLeyendsViewModels;
@model LiberacionProductoWeb.Models.ConditioningOrderViewModels.ConditioningOrderViewModel;
@inject IViewLocalizer Localizer

<div class="row">
    <div class="col-lg-12">
        <div class="panel-group" id="step-1-accordionOA">
            <div class="panel panel-primary overflow-hidden">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        <a class="accordion-toggle accordion-toggle-styled" data-toggle="collapse"
                            data-parent="#step-1-accordionOA" href="#step-1-collapseOA-three" aria-expanded="true">
                            <i id="icon-1"class="fa fa-plus-circle pull-right"></i>
                            @Model.LayoutLeyends.Where(x=>x.Step.Equals(LayoutLeyendsConditioningOrderSteps.StepZero.Value) && x.Type.Equals(LayoutLeyendsType.ConditioningOrder.Value)).Select(x=>x.Title).FirstOrDefault()
                        </a>
                    </h3>
                </div>
                <div id="step-1-collapseOA-three" class="@Model.ShowPanelSteps" style="">
                    <div class="panel-body">
                        @Html.Raw(@Model.LayoutLeyends.Where(x=>x.Step.Equals(LayoutLeyendsConditioningOrderSteps.StepZero.Value) && x.Type.Equals(LayoutLeyendsType.ConditioningOrder.Value)).Select(x=>x.Text).FirstOrDefault())
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>