@using Microsoft.Extensions.Localization;
@using LiberacionProductoWeb.Localize;
@model LiberacionProductoWeb.Models.CheckListViewModels.CheckListVM
@inject IStringLocalizer<Resource> resource;
@{
    Layout = "~/Views/Shared/_Layout_back.cshtml";
    ViewData["Title"] = "Vista previa";

}

<!-- begin #content -->
<div id="content" class="content">
    <h1 class="page-header">Vista previa</h1>
    <div class="containerIframe">
        <iframe class="responsive-iframe"
                src='@Url.Action("QuestionsTwo", "CheckListQuestions")?idOA=@Model.NumberOrder&tournumber=@Model.TourNumber&distributionBatch=@Model.DistributionBatch&checkListId=@Model.checkListId&preview=1'>
        </iframe>
    </div>
</div>
<!-- end #content -->

<style>
    .containerIframe {
        position: relative;
        width: 100%;
        overflow: hidden;
        padding-top: 100%; /* 1:1 Aspect Ratio */
    }

    .responsive-iframe {
        position: absolute;
        top: 0;
        left: 0;
        bottom: 0;
        right: 0;
        width: 100%;
        height: 100%;
        border: none;
    }
</style>

@section Scripts {
    <environment names="Development,Staging,Production">
        <script src="~/js/demo.min.js"></script>
        <script src="~/js/apps.min.js"></script>

    </environment>

    <script>
        $(document).ready(function () {
            App.init();
            Demo.init();
        });
    </script>
    }
